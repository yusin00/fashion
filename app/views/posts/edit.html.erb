<div class="row">
  <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3">
    <div class="card mt-5">
      <div class="card-body">
        <h1>投稿編集</h1>
        
        <%= form_with model: @post do |f| %>
        
          <h4>タイトル</h4>
          <%= f.text_field :title %>
          
          <h4>画像</h4>
          
          <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>  
          
          <h4>本文</h4>
          <%= f.text_area :body %>
          
          <%= f.submit '保存' %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>  
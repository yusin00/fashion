<h1 class="my-5">>投稿一覧</h1>

<div class="row">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <% if post.post_images.any? %>
        <% post.post_images.each do |post_image| %>
          <% if post_image.image.attached? %>
            <div class="col-sm-4 col-md-3 col-lg-2">
              <%= link_to post_path(post.id), class: "d-block" do %>
                <%= post_image.title || "no-text" %><br>
                <%= image_tag post_image.image, class: "w-100" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
  <div class="col-sm-4 col-md-3 col-lg-2">
    <%= image_tag 'no_image', class: "w-100" %>
  </div>
<% end %>
</div>

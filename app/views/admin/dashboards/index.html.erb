<%= form_with url: admin_root_path, method: :get do |f| %>
  <%= f.search_field :keyword, value: params[:keyword] %>
  <%= f.submit "search" %>
<% end %>

<h1>全ユーザー一覧</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>名前</th>
      <th>e-mail</th>
      <th colspan=2></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-primary" %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</ul>

